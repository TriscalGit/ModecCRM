<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>issueDate</fullName>
    <active>false</active>
    <errorConditionFormula>AND(OR(ISCHANGED(IssueDate__c), ISNEW()), IssueDate__c &lt; TODAY())</errorConditionFormula>
    <errorDisplayField>IssueDate__c</errorDisplayField>
    <errorMessage>The &apos;Issue Date&apos; can not be in the past</errorMessage>
</ValidationRule>
