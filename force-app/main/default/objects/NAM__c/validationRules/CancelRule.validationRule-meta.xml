<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CancelRule</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &apos;Cancelled&apos;), ISBLANK( CancelReason__c))</errorConditionFormula>
    <errorDisplayField>CancelReason__c</errorDisplayField>
    <errorMessage>You must inform the Cancel Reason to Cancel a NAM</errorMessage>
</ValidationRule>
