<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>statusApproved</fullName>
    <active>false</active>
    <errorConditionFormula>AND(Text(Status__c) &lt;&gt; &apos;Approved&apos;,  NOT(ISBLANK(FinalComment__c )))</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>You must select Status to Approved before fill a Final Comment</errorMessage>
</ValidationRule>
